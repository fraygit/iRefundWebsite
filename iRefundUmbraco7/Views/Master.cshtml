    <script type="text/javascript">

        function logout() {

            $.ajax({
                url: '/umbraco/surface/Account/Logout',
                data: {},
                dataType: 'json',
                method: 'GET',
                success: function (result) {
                    document.location.href = "/";
                },
                error: function (xhr, error, errorThrown) {
                    $('#myModal').modal({
                        backdrop: 'static',
                        keyboard: false
                    });
                    $('#myModal').modal('show');
                }
            });
        }

    </script>

